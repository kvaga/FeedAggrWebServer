<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>FeedAggrWebServer</display-name>
  <welcome-file-list>
    <welcome-file>Login.html</welcome-file>
  </welcome-file-list>
  <!-- 
  <context-param>
    <param-name>log4jConfiguration</param-name>
    <param-value>log4j2.xml</param-value>
</context-param>
-->

  <context-param>
    <param-name>dbURL</param-name>
    <param-value>jdbc:mysql://localhost/mysql_db</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>mysql_user</param-value>
  </context-param>
  <context-param>
    <param-name>dbUserPwd</param-name>
    <param-value>mysql_some_pwd</param-value>
  </context-param>
  <listener>
        <listener-class>ru.kvaga.rss.feedaggrwebserver.StartStopListener</listener-class>
  </listener>
  <listener>
  	<listener-class>ru.kvaga.rss.feedaggrwebserver.BackgroudJobManager</listener-class>
  </listener>
  
  <!--  
  <filter>
    <filter-name>RequestLoggingFilter</filter-name>
    <filter-class>ru.kvaga.rss.feedaggrwebserver.RequestLoggingFilter</filter-class>
  </filter>
  -->
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>ru.kvaga.rss.feedaggrwebserver.AuthenticationFilter</filter-class>
  </filter>
  <!--  
  <filter-mapping>
    <filter-name>RequestLoggingFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
  -->
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/error.html</location>
</error-page>
<error-page>
    <error-code>501</error-code>
    <location>/WEB-INF/error.html</location>
</error-page>
<error-page>
    <error-code>502</error-code>
    <location>/WEB-INF/error.html</location>
</error-page>
<error-page>
    <error-code>503</error-code>
    <location>/WEB-INF/error.html</location>
</error-page>
</web-app>