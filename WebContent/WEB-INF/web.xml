<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>FeedAggrWebServer</display-name>
	<security-constraint>
	    <web-resource-collection>
	        <web-resource-name>showFeed</web-resource-name>
	        <url-pattern>/showFeed</url-pattern>
	    </web-resource-collection>
	    <!-- OMIT auth-constraint -->
	</security-constraint>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Wildcard means whole app requires authentication</web-resource-name>
			<url-pattern>/*</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>feedaggrwebserver</role-name>
		</auth-constraint>

		<user-data-constraint>
			<!-- transport-guarantee can be CONFIDENTIAL, INTEGRAL, or NONE -->
			<transport-guarantee>NONE</transport-guarantee>
		</user-data-constraint>
	</security-constraint>

	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
  
  
  
  <welcome-file-list>
    <!-- <welcome-file>Login.html</welcome-file> -->
    <welcome-file>LoginSuccess.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>dbURL</param-name>
    <param-value>jdbc:mysql://localhost/mysql_db</param-value>
  </context-param>
  <context-param>
    <param-name>dbUser</param-name>
    <param-value>mysql_user</param-value>
  </context-param>
  <context-param>
    <param-name>dbUserPwd</param-name>
    <param-value>mysql_some_pwd</param-value>
  </context-param>
  <listener>
    <listener-class>ru.kvaga.rss.feedaggrwebserver.StartStopListener</listener-class>
  </listener>
  <listener>
    <listener-class>ru.kvaga.rss.feedaggrwebserver.jobs.BackgroudJobManager</listener-class>
  </listener>
  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>ru.kvaga.rss.feedaggrwebserver.filters.AuthenticationFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ru.kvaga.rss.feedaggrwebserver.filters.EncodingFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/error.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/error.html</location>
  </error-page>
  <error-page>
    <error-code>501</error-code>
    <location>/WEB-INF/error.html</location>
  </error-page>
  <error-page>
    <error-code>502</error-code>
    <location>/WEB-INF/error.html</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/WEB-INF/error.html</location>
  </error-page>
  <servlet>
    <description></description>
    <display-name>getFeedIdsFromCompositeUserFeedServlet</display-name>
    <servlet-name>getFeedIdsFromCompositeUserFeedServlet</servlet-name>
    <servlet-class>ru.kvaga.rss.feedaggrwebserver.servlets.CompositeFeedsListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>getFeedIdsFromCompositeUserFeedServlet</servlet-name>
    <url-pattern>/getFeedIdsFromCompositeUserFeedServlet</url-pattern>
  </servlet-mapping>
</web-app>